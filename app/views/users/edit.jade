extends ../shared/template
block content
  h2 Edit Your Profile
  .row
    .col-xs-6
      form(role='form', method='post', action='/profile')
        input(type='hidden', name='_method', value='put')
        .radio
          label
            input(type='radio', name='visible', value='public' checked)
            span Public
        .radio
          label
            input(type='radio', name='visible', value='private')
            span Private
        .form-group
          label(for='email') Email
          input.form-control#email(type='email', name='email', value=user.email autofocus=true)
        .form-group
          label(for='photo') Photo
          input.form-control#photo(type='text', name='photo')
        .form-group
          label(for='tagline') Tagline
          input.form-control#tagline(type='text', name='tagline')
        .form-group
          label(for='facebook') Facebook URL
          input.form-control#facbook(type='text', name='facebook')
        .form-group
          label(for='twitter') Twitter URL
          input.form-control#twitter(type='text', name='twitter')
        .form-group
          label(for='phone') Phone #
          input.form-control#phone(type='tel', name='phone')
        button.btn.btn-primary(type='submit') Submit
      .col-xs-6

    block scripts
