extends ../shared/template
block content
  .row
    .col-xs-12
      h2: a(href='/profile/edit')= user.email
      h5= user.tagline
  .row
    .col-xs-2
      a.thumbnail(href='#')
        img(src=user.photo)
    .col-xs-10
  .row
    .col-xs-12
      table.table.table-striped.table-hover.table-bordered
        thead
          tr
            th Email
            th Phone
            th Facebook
            th Twitter
            th Visible
        body
          tr
            td= user.email
            td= user.phone
            td: a(href=user.facebook, target='_blank')= user.facebook
            td: a(href=user.twitter, target='_blank')= user.twitter
            td= user.isVisible

block scripts
